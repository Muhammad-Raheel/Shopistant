<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_margin="10dp"
    android:layout_width="match_parent"
    android:foreground="?selectableItemBackground"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="4dp"
    >
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp">
    <TextView
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:layout_toRightOf="@+id/img_item"
        android:id="@+id/txt_product_name"
        android:text="@string/txt_product_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/txt_size"/>
    <ImageView
        android:visibility="gone"
        android:layout_marginRight="10dp"
        android:id="@+id/img_item"
        android:layout_width="100dp"
        android:layout_height="100dp" />
        <TextView
            android:layout_alignParentRight="true"
            android:id="@+id/txt_aisle_num"
            android:text="@string/txt_product_aisle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/txt_size"/>
        <TextView
            android:layout_toRightOf="@+id/img_item"
            android:layout_below="@+id/txt_product_name"
            android:id="@+id/txt_aisle_qunatity"
            android:text="@string/txt_product_quntity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/txt_size"/>
        <TextView
            android:layout_toRightOf="@+id/img_item"
            android:layout_below="@id/txt_aisle_qunatity"
            android:id="@+id/txt_aisle_price"
            android:text="@string/txt_product_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/txt_size"/>
</RelativeLayout>
</android.support.v7.widget.CardView>