<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:foreground="?selectableItemBackground"
    android:layout_height="match_parent"
    card_view:cardCornerRadius="4dp"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:paddingTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gray">
            <TextView
                android:id="@+id/txt_title"
                android:padding="10dp"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/colorPrimary"
                android:text="Add Promotion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_below="@id/txt_title"
                android:id="@+id/img_promo"
                android:src="@drawable/megaphone"
                android:layout_centerHorizontal="true"
                android:layout_width="300dp"
                android:layout_height="300dp" />
            <EditText
                android:id="@+id/edt_promo"
                android:layout_marginTop="15dp"
                android:background="@drawable/round_button"
                android:layout_centerHorizontal="true"
                android:layout_width="400dp"
                android:layout_marginBottom="10dp"
                android:padding="5dp"
                android:gravity="top"
                android:lines="5"
                android:layout_height="120dp"
                android:layout_below="@+id/img_promo"
                android:hint="Enter Promotion Details here"/>

            <Button
                android:id="@+id/btn_create"
                style="@style/Button"
                android:textColor="@android:color/white"
                android:layout_marginTop="10dp"
                android:layout_below="@id/edt_promo"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp"
                android:text="Create"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/btn_cancel"
                style="@style/Button"
                android:layout_marginLeft="20dp"
                android:textColor="@android:color/white"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/btn_create"
                android:layout_below="@id/edt_promo"
                android:layout_marginBottom="10dp"
                android:text="Cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </ScrollView>

</android.support.v7.widget.CardView>